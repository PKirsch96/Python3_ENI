class Current:
	def __init__(self, state):
		class Memento:
			state = None
		self.state = state
		self.memento = Memento()
	def setState(self, state):
		self.memento.state, self.state = self.state, state
	def resetState(self):
		state = self.memento.state
		if state is None:
			print("Il n'est pas possible d'aller en arriÃ¨re")
		self.memento.state, self.state = None, self.memento.state

c = Current('1')
print(c.state)
c.setState('2')
print(c.state)
c.resetState()
print(c.state)
c.setState('3')
print(c.state)
c.resetState()
print(c.state)
c.resetState()

